<div id="<%= id %>" 
     data-controller="simple-notification" 
     data-simple-notification-duration-value="5000"
     class="notification-toast <%= theme_classes('bg-white', 'bg-gray-800') %> shadow-xl rounded-lg pointer-events-auto flex ring-1 <%= theme_classes('ring-black ring-opacity-5', 'ring-gray-600') %>">
  
  <!-- Color bar based on type -->
  <div class="flex-shrink-0 w-2 <%= type == 'success' ? 'bg-green-400' : type == 'error' ? 'bg-red-400' : type == 'warning' ? 'bg-yellow-400' : 'bg-blue-400' %>"></div>
  
  <div class="flex-1 p-5">
    <div class="flex items-start">
      <div class="flex-shrink-0">
        <!-- Icon based on type -->
        <% if type == 'success' %>
          <svg class="h-7 w-7 text-green-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% elsif type == 'error' %>
          <svg class="h-7 w-7 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% elsif type == 'warning' %>
          <svg class="h-7 w-7 text-yellow-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16c-.77.833.192 2.5 1.732 2.5z" />
          </svg>
        <% else %>
          <svg class="h-7 w-7 text-blue-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        <% end %>
      </div>
      
      <div class="ml-4 flex-1 pt-1">
        <% if defined?(title) && title.present? %>
          <p class="text-base font-semibold <%= theme_classes('text-gray-900', 'text-white') %> mb-2">
            <%= title %>
          </p>
        <% end %>
        <p class="text-base <%= theme_classes('text-gray-700', 'text-gray-300') %> leading-relaxed">
          <%= message %>
        </p>
      </div>
      
      <div class="ml-4 flex-shrink-0 flex">
        <button data-action="click->simple-notification#close" 
                class="<%= theme_classes('bg-white text-gray-400 hover:text-gray-600', 'bg-gray-800 text-gray-500 hover:text-gray-300') %> rounded-md inline-flex p-1.5 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 transition-colors">
          <span class="sr-only">Close</span>
          <svg class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    </div>
  </div>
</div>

<style>
  .notification-toast {
    transition: all 0.3s ease-out;
    min-height: 80px;
  }
  
  .notification-toast:hover {
    transform: translateX(-4px) !important;
  }
</style>
