<div class="container mx-auto px-4 py-8">
  <div class="max-w-2xl mx-auto">
    <div class="mb-8">
      <h1 class="text-3xl font-bold <%= theme_classes('text-gray-800', 'text-white') %> mb-2"><%= t('posts.new.title') %></h1>
      <p class="<%= theme_classes('text-gray-600', 'text-gray-400') %>"><%= t('posts.new.description') %></p>
    </div>

    <div class="<%= theme_classes('bg-white', 'bg-gray-800') %> rounded-lg shadow-md p-6">
      <%= render 'form', post: @post %>
    </div>
  </div>
</div>
