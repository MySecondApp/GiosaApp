<div class="container mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-4xl font-bold <%= theme_classes('text-gray-800', 'text-white') %>"><%= t('posts.index.title') %></h1>
    <div class="space-x-4">
      <%= link_to t('posts.show.home'), root_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition-colors" %>
      <%= link_to t('navigation.new_post'), new_post_path, class: "bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-md transition-colors" %>
    </div>
  </div>

  <!-- Barra de búsqueda con Hotwire -->
  <div class="mb-8" data-controller="search" data-search-url-value="<%= posts_path %>">
    <div class="search-container max-w-md mx-auto">
      <div class="search-icon">
        <svg class="h-5 w-5 <%= theme_classes('text-gray-400', 'text-gray-500') %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
        </svg>
      </div>
      <input 
        data-search-target="input"
        data-action="input->search#search"
        type="text" 
        placeholder="<%= t('posts.index.search_placeholder') %>"
        value="<%= params[:search] %>"
        class="search-input <%= theme_classes('bg-white border-gray-300 text-gray-900 placeholder-gray-500', 'bg-gray-800 border-gray-600 text-white placeholder-gray-400') %> border rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200"
      >
      <% if params[:search].present? %>
        <button 
          data-action="click->search#clear"
          class="clear-button text-gray-400 hover:text-gray-600 transition-colors"
          type="button"
        >
          <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      <% end %>
      
      <!-- Spinner de búsqueda -->
      <div data-search-target="spinner" id="search-spinner" class="search-spinner hidden" style="display: none;">
        <div class="<%= theme_classes('bg-white', 'bg-gray-800') %> rounded-full p-1 shadow-sm">
          <svg class="animate-spin h-5 w-5 <%= theme_classes('text-blue-500', 'text-blue-400') %>" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista de posts con Turbo Frame para búsqueda en vivo -->
  <div data-search-target="results">
    <%= render "posts_list", posts: @posts %>
  </div>
</div>
