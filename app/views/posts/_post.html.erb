<div id="post_<%= post.id %>" class="<%= theme_classes('bg-white', 'bg-gray-800') %> rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow">
  <h2 class="text-xl font-semibold mb-2 <%= theme_classes('text-gray-800', 'text-white') %>"><%= post.title %></h2>
  <p class="<%= theme_classes('text-gray-600', 'text-gray-300') %> mb-4 line-clamp-3"><%= truncate(post.content, length: 100) %></p>
  
  <div class="flex items-center justify-between">
    <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium <%= post.published? ? theme_classes('bg-green-100 text-green-800', 'bg-green-800 text-green-200') : theme_classes('bg-yellow-100 text-yellow-800', 'bg-yellow-800 text-yellow-200') %>">
      <%= post.published? ? t('posts.show.published') : t('posts.show.draft') %>
    </span>
    
    <div class="flex flex-wrap items-center gap-3">
      <%= link_to t('posts.show.view'), post, class: "text-blue-500 hover:text-blue-700 text-sm font-medium px-2 py-1 rounded hover:bg-blue-50" %>
      <%= link_to t('posts.show.edit'), edit_post_path(post), class: "text-green-500 hover:text-green-700 text-sm font-medium px-2 py-1 rounded hover:bg-green-50" %>
      <%= button_to t('posts.show.delete'), post, method: :delete, 
                    data: { 
                      "turbo-confirm": t('posts.show.confirm_delete')
                    }, 
                    class: "text-red-500 hover:text-red-700 text-sm font-medium bg-transparent border-0 px-2 py-1 rounded hover:bg-red-50 cursor-pointer" %>
    </div>
  </div>
</div>
