<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-4xl font-bold text-gray-800 mb-2"><%= @post.title %></h1>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @post.published? ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800' %>">
              <%= @post.published? ? 'Publicado' : 'Borrador' %>
            </span>
            <span class="text-gray-500 text-sm">
              Creado el <%= @post.created_at.strftime('%d de %B, %Y') %>
            </span>
          </div>
        </div>
        <div class="space-x-2">
          <%= link_to "Editar", edit_post_path(@post), class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors" %>
          <%= link_to "Eliminar", @post, method: :delete, 
                      data: { confirm: '¿Estás seguro?' }, 
                      class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition-colors" %>
        </div>
      </div>
    </div>

    <div class="bg-white rounded-lg shadow-md p-8">
      <div class="prose max-w-none">
        <%= simple_format(@post.content) %>
      </div>
    </div>

    <div class="mt-8 flex justify-between">
      <%= link_to "← Volver a Posts", posts_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition-colors" %>
      <%= link_to "Inicio", root_path, class: "bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md transition-colors" %>
    </div>
  </div>
</div>
