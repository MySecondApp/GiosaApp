<%= turbo_stream_from "post_#{@post.id}_comments" %>

<div class="container mx-auto px-4 py-8">
  <div class="max-w-4xl mx-auto">
    <div class="mb-8">
      <div class="flex justify-between items-start mb-4">
        <div>
          <h1 class="text-4xl font-bold <%= theme_classes('text-gray-800', 'text-white') %> mb-2"><%= @post.title %></h1>
          <div class="flex items-center space-x-4">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium <%= @post.published? ? theme_classes('bg-green-100 text-green-800', 'bg-green-800 text-green-200') : theme_classes('bg-yellow-100 text-yellow-800', 'bg-yellow-800 text-yellow-200') %>">
              <%= @post.published? ? t('posts.show.published') : t('posts.show.draft') %>
            </span>
            <span class="<%= theme_classes('text-gray-500', 'text-gray-400') %> text-sm">
              <%= t('posts.show.created_on') %> <%= l(@post.created_at, format: :long) %>
            </span>
          </div>
        </div>
        <div class="flex space-x-2">
          <%= link_to t('posts.show.edit'), edit_post_path(@post), class: "bg-blue-500 hover:bg-blue-600 text-white px-4 py-2 rounded-md transition-colors" %>
          <%= button_to t('posts.show.delete'), @post, method: :delete, 
                        data: { 
                          "turbo-confirm": t('posts.show.confirm_delete')
                        }, 
                        class: "bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-md transition-colors border-0 cursor-pointer" %>
        </div>
      </div>
    </div>

    <div class="<%= theme_classes('bg-white', 'bg-gray-800') %> rounded-lg shadow-md p-8">
      <div class="prose max-w-none <%= theme_classes('', 'prose-invert') %>">
        <div class="<%= theme_classes('text-gray-800', 'text-gray-200') %>">
          <%= simple_format(@post.content) %>
        </div>
      </div>
    </div>

    <!-- SecciÃ³n de Comentarios -->
    <%= render "comments/comments_section", post: @post %>

    <div class="mt-8 flex justify-between">
      <%= link_to t('posts.show.back_to_posts'), posts_path, class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition-colors" %>
      <%= link_to t('posts.show.home'), root_path, class: "bg-indigo-500 hover:bg-indigo-600 text-white px-4 py-2 rounded-md transition-colors" %>
    </div>
  </div>
</div>
