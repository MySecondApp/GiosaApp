<div id="<%= dom_id(comment) %>" class="comment-item rounded-lg p-4 mb-3 border-l-4 border-blue-500">
  <div class="flex justify-between items-start mb-2">
    <div class="flex items-center space-x-2">
      <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
        <span class="text-white text-sm font-semibold"><%= comment.author_name.first.upcase %></span>
      </div>
      <div>
        <h4 class="font-semibold comment-author-name"><%= comment.author_name %></h4>
        <p class="text-xs comment-date">
          <%= time_ago_in_words(comment.created_at) %> atrás
        </p>
      </div>
    </div>
    
    <%= button_to post_comment_path(comment.post, comment), 
                  method: :delete,
                  data: { 
                    confirm: "¿Estás seguro de eliminar este comentario?",
                    turbo_method: :delete
                  },
                  class: "text-red-500 hover:text-red-700 text-sm",
                  form: { data: { turbo: true } } do %>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
      </svg>
    <% end %>
  </div>
  
  <div class="comment-content leading-relaxed">
    <%= simple_format(comment.content, class: "mb-0") %>
  </div>
</div>
