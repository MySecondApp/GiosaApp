<div class="mt-8">
  <div class="flex items-center mb-6">
    <svg class="w-6 h-6 <%= theme_classes('text-gray-600', 'text-gray-400') %> mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
    </svg>
    <h2 class="text-2xl font-bold <%= theme_classes('text-gray-800', 'text-white') %>">
      <%= t('comments.title') %>
      <span id="comments_count_<%= post.id %>">
        <%= render "comments/comments_count", post: post %>
      </span>
    </h2>
  </div>

  <!-- Formulario para nuevo comentario o mensaje de borrador -->
  <div class="mb-8">
    <% if post.allows_comments? %>
      <%= render "comments/form", post: post, comment: Comment.new %>
    <% else %>
      <%= render "comments/draft_message", post: post %>
    <% end %>
  </div>

  <!-- Lista de comentarios existentes -->
  <div id="post_<%= post.id %>_comments" class="space-y-4">
    <% if post.comments.any? %>
      <%= render post.comments %>
    <% else %>
      <div class="text-center py-8 <%= theme_classes('text-gray-500', 'text-gray-400') %>">
        <svg class="w-16 h-16 mx-auto mb-4 <%= theme_classes('text-gray-300', 'text-gray-600') %>" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
        </svg>
        <p class="text-lg"><%= t('comments.no_comments') %></p>
        <% if post.allows_comments? %>
          <p class="text-sm"><%= t('comments.be_first') %></p>
        <% else %>
          <p class="text-sm"><%= t('comments.available_when_published') %></p>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
